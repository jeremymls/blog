{% extends "/base.twig" %}
{% import "macros/utils.twig" as utils %}

{% block title %}Documentation{% endblock %}
{% block subtitle %}
	<a id="retour" href="{{ getPath('dashboard') }}" ><i class="fa fa-cogs" aria-hidden="true"></i></a>
{% endblock %}

{% block main %}
<div class="container">
    <div class="row">
        <div class="col">
            <iframe
            id="iframe"
            name="iframe"
            src="/docs/api/index.html" 
            onload='javascript:(function(o){
                o.style.height=o.contentWindow.document.body.scrollHeight+"px";
                var cssLink = document.createElement("link");
                cssLink.href = "{{ asset('css/phpdoc.css') }}";
                cssLink.rel = "stylesheet"; 
                cssLink.type = "text/css";
                o.contentWindow.document.head.appendChild(cssLink);
            }(this));'>
            </iframe>
        </div>
    </div>
</div>
{% endblock %}