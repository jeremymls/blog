{% extends "/base.twig" %}
{% import "macros/utils.twig" as utils %}

{% block title %}Administration des Cat√©gories{% endblock %}
{% block subtitle %}
	<a id="retour" href="{{ getPath('dashboard') }}"><i class="fa fa-cogs" aria-hidden="true"></i></a>
	<a id="oneTool" href="{{ getPath('admin:category:add') }}" ><i class="fa fa-plus" aria-hidden="true"></i></a>
{% endblock %}

{% block main %}

    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    {{ utils.pagination(nbPage) }}
                    <table id="BO_table" class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th class="text-center">Actions</th>
                            <tr>
                        </thead>
                        <tbody>
                            {% for category in categories %}
                            
                                <tr>
                                    <td>
                                        {{ category.identifier }}
                                    </td>
                                    <td>
                                        {{ category.name }}
                                    </td>
                                    <td class="text-center">
                                            <a href="{{ getPath('admin:category:update', {'id':category.identifier}) }}" class="btn btn-info"><i class="fa fa-pencil-square-o"></i> Editer</a>
                                            <a href="{{ getPath('admin:category:delete', {'id':category.identifier}) }}" class="btn btn-danger confirm"><i class="fa fa-trash"></i> Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {{ utils.pagination(nbPage) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block script %}
<script src="/assets/js/admin.js"></script>
{% endblock %}