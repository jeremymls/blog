{% extends "/base.twig" %}

{% block title %}Administration des projets{% endblock %}
{% block subtitle %}
	<a id="retour" href="javascript:history.back()" ><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
	<a id="oneTool" href="index.php?action=postAdd" ><i class="fa fa-plus" aria-hidden="true"></i></a>
{% endblock %}

{% block main %}

    <section>
        <div class="container">
            <div class="row">
                <div class="col">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Url</th>
                                <th>Date de cr√©ation</th>
                                <th>Actions</th>
                            <tr>
                        </thead>
                        <tbody>
                            {% for post in posts %}
                                <tr>
                                    <td>{{ post.title }}</td>
                                    <td><a href="{{ post.url }}" target="_blank">{{ post.url }}</a></td>
                                    <td>{{ post.frenchCreationDate }}</td>
                                    <td>
                                        <a href="?action=postUpdate&id={{ post.identifier }}" class="btn btn-warning"><i class="fa fa-pencil-square-o"></i></a>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-identifier="{{ post.identifier }}" data-title="{{ post.title }} (id:{{ post.identifier }})" data-target="#confirmDeletePost"><i class="fa fa-trash"></i></button>
                                        <button type="button" class="btn btn-primary lunchPreview" data-toggle="modal" data-identifier="{{ post.identifier }}" data-title="{{ post.title }} (id:{{ post.identifier }})" data-chapo="{{ post.chapo }}" data-url="{{ post.url }}" data-target="#postPreview"><i class="fa fa-search-plus"></i></button>
                                        <a href="?action=post&id={{ post.identifier }}" target="_blank" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>




<!-- Modal -->
<div class="modal fade" id="confirmDeletePost" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="myModalLabel">Voulez-vous vraiment supprimer ce post?</h4>
			</div>
			<div class="modal-body"></div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
				<a href="" class="btn btn-danger">Supprimer</a>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="postPreview" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="myModalLabel"></h4>
			</div>
			<div class="modal-body">
                <div class="modal-chapo"></div>
                <div class="modal-iframe"></div>
            </div>
			<div class="modal-footer">

				<button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                <a href="" target="_blank" class="btn btn-primary externalLink"><i class="fa fa-external-link"></i></a>
                <a href="" class="btn btn-warning editPost"><i class="fa fa-pencil-square-o"></i></a>
                <button type="button" class="btn btn-danger lunchDeleteModal" data-toggle="modal" data-identifier="" data-title="" data-target="#confirmDeletePost"><i class="fa fa-trash"></i></button>
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block script %}
<script src="assets/js/admin.js"></script>
{% endblock %}