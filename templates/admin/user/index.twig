{% extends "/base.twig" %}
{% import "macros/utils.twig" as utils %}

{% block title %}Administration des Utilisateurs{% endblock %}
{% block subtitle %}
	<a id="retour" href="?action=dashboard" ><i class="fa fa-cogs" aria-hidden="true"></i></a>
	<a id="oneTool" href="index.php?action=register"><i class="fa fa-plus" aria-hidden="true"></i></a>
{% endblock %}

{% block main %}

    <section>
        <div class="container">
            <div class="row">
                <div class="col">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th scope="col">Username</th>
                                <th>Mail</th>
                                <th>Role</th>
                                <th>Date de cr√©ation</th>
                                <th>Actions</th>
                            <tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.identifier }}</td>
                                    <th>{{ user.username }}</th>
                                    <td><a href="mailto:{{ user.email }}">{{ user.email }}</a></td>
                                    <td>{{ user.role }}</td>
                                    <td>{{ user.frenchCreationDate }}</td>
                                    <td>
                                        <a href="?action=profil&id={{ user.identifier }}" target="_blank" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                                        <a href="?action=updateUser&userId={{ user.identifier }}" class="btn btn-warning"><i class="fa fa-pencil-square-o"></i></a>
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-identifier="{{ user.identifier }}" data-title="{{ user.username }} (id:{{ user.identifier }})" data-target="#confirmDeleteUser"><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    {{ utils.pagination(nbPage) }}
                </div>
            </div>
        </div>
    </section>




<!-- Modal -->
<div class="modal fade" id="confirmDeleteUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="myModalLabel">Voulez-vous vraiment supprimer cet utilisateur?</h4>
			</div>
			<div class="modal-body"></div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
				<a href="" class="btn btn-danger">Supprimer</a>
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block script %}
<script src="assets/js/admin.js"></script>
{% endblock %}