{# Coordonnées #}
{% macro contact() %}
    <ul class="list-unstyled">
        {% if cs_address %}
            <li><i class="fa fa-map-marker fa-fw"></i> {{ cs_address }}</li>
        {% endif %}
        {% if cs_owner_phone %}
            <li><i class="fa fa-phone fa-fw"></i> <a href="tel:{{ cs_owner_phone }}">{{ cs_owner_phone }}</a></li>
        {% endif %}
        {% if cs_owner_email %}
            <li><i class="fa fa-envelope-o fa-fw"></i> <a href="mailto:{{ cs_owner_email }}">{{ cs_owner_email }}</a></li>
        {% endif %}
        {% if cs_contact_form_display == "ON" %}
            <li><i class="fa fa-envelope-o fa-fw"></i> <a href="/#contact">formulaire de contact</a></li>
        {% endif %}
    </ul>
{% endmacro %}

