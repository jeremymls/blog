{% extends "/base.twig" %}
{% import "macros/utils.twig" as utils %}

{% block title %}Cat√©gories{% endblock %}
{% block subtitle %}
	<a id="retour" href="{{ getPath('home') }}" ><i class="fa fa-home" aria-hidden="true"></i></a>
{% endblock %}

{% block head %}
<link href="{{ asset('css/categories.min.css') }}" rel="stylesheet">
{% endblock %}

{% block main %}
<section id="posts" class="container">
	<div class="row">
        {% for category in categories %}
		<div class="hero-center-section">
			<div class="left-text">{{ category.name|split(" ")|reverse|join(" ") }}</div>
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-12">
						<div class="img-wrap">
						</div>
					</div>
				</div>
			</div>
		</div>
        {% endfor %}
        <div class="hero-center-section">
			<div class="left-text">{{ "Toutes les publications"|split(" ")|reverse|join("<br>")|raw }}</div>
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-12">
						<div class="img-wrap">
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="section over-hide z-bigger">
			<ul class="slide-buttons">
                {% for category in categories %} 
                {# 5 MAX #}
				<li class="">
					<a href="{{ getPath('post:id', {'id':category.identifier}) }}" class="hover-target" data-hover="{{ category.name }}">{{ category.name }}</a>
				</li>
                {% endfor %}
				<li class="active">
					<a href="{{ getPath('post:id', {'id':category.identifier}) }}" class="hover-target" data-hover="Toutes les publications">Toutes les publications</a>
				</li>
			</ul>
		</div>
	</div>
</section>

{% endblock %}
