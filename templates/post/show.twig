{% extends "/base.twig" %}
{% import "macros/utils.twig" as utils %}

{% block title %}Projet{% endblock %}
{% block subtitle %}
	<h2>{{ post.title }}</h2>
	<em>{{ post.frenchCreationDate }}</em><br>
	<a id="retour" href="/posts" ><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
	<div id="oneTool" class="page-scroll">
		<a href="#comment" ><i class="fa fa-comment-o" aria-hidden="true"></i></a>
	</div>
{% endblock %}
{% block imageHeader %}
	{% if post.picture is not empty %}
		<img id="imageHeader" class="img-responsive" src="{{ post.picture }}" alt='{{ post.title }} picture'>
	{% endif %}
{% endblock %}

{% block main %}
	<div class="container">
		{% if alert == "commentSubmitted" %}
			{{ alerts.commentSubmitted() }}
		{% endif %}
	</div>
	<section class="container">
		{% if post.chapo %}
		<h2>Résumé</h2>
			<div id="postContent">
				<p>{{ post.chapo | nl2br }}</p>
			</div>
		{% endif %}
		<h2>Description</h2>
		<div>
			<p>{{ post.content | nl2br }}</p>
		</div>
		{% if post.url is not empty %}
		<h2>Aperçu</h2>
		<div id="section-preview" class="row text-center">
			<div class="col-sm-12 preview-item">
				<a href="{{ post.url }}" target="_blank" class="preview-link" >
					<div class="caption">
						<div class="caption-content">
							<h3>Afficher le site</h3><br>
							<i class="fa fa-external-link fa-3x"></i>
						</div>
					</div>
					<iframe id="SiteFrame"
						title="{{ post.title }}"
						width="100%"
						src="{{ post.url }}">
					</iframe>
				</a>
			</div>
		</div>
		{% endif %}
	</section>

	<section id="comment" class="container">
		<div id="commentAdd">
			{% if isLogged() %}
				{% if isValidate() or isAdmin() %}
					<div class="row">
						<div class="col-lg-12 text-center">
							<h3>Laisser un commentaire</h3>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-8 col-lg-offset-2">
							{# <form name="sentMessage" id="contactForm" novalidate> #}
							<form action="" method="post">
								<div class="row control-group">
									<div class="form-group col-xs-12 floating-label-form-group controls">
										<label>Commentaire</label>
										<textarea rows="3" class="form-control" placeholder="Ecrivez votre commentaire" id="comment" name="comment" required data-validation-required-message="Please enter a comment."></textarea>
										<p class="help-block text-danger"></p>
									</div>
								</div>
								<br>
								<div id="success"></div>
								<div class="row">
									<div class="form-group col-xs-12 text-center">
										<button type="submit" class="btn btn-success btn-lg">Envoyer</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				{% else %}
					<div class="row">
						<div class="col text-center not-connected">
							<p>Vous devez valider votre adresse e-mail pour pouvoir laisser un commentaire.</p>
						</div>
					</div>
				{% endif %}
			{% else %}
				<div class="row">
					<div class="col text-center not-connected">
						<p>Vous devez être connecté pour pouvoir laisser un commentaire.</p>
						<a class="btn btn-sm btn-primary" href="/login?redirect={{ url_request }}#comment" role="button">Se connecter</a>
					</div>
				</div>
			{% endif %}
		</div>

		{% if comments is not empty %}
			<div id="commentList" class="row">
				<div class="col-lg-12 text-center">
					<h2>Commentaires</h2>
					<hr class="star-primary">
				</div>
			</div>
            {{ utils.pagination(nbPage,"#commentList") }}
			{% for comment in comments %}
				<div class="panel panel-default">
					{% if not comment.deleted %}
					<div class="panel-heading commentHeader">
					<div style="display:flex; align-items:center;">
						<div id="divOverview" class="user" style="width: 2rem; margin-right:1rem;">
							<img id="thumbnailOverview" src={% if comment.author.picture is empty %}"/assets/img/profile.png"{% else %}{{ comment.author.picture }}{% endif %} class="img-responsive" alt="{{ comment.author.username }}">
						</div>
						<small><strong>{{ comment.author.username }}</strong> le {{comment.frenchCreationDate }}</small>  
					</div>
					{% if comment.author.identifier == getUserParam("identifier") %}
					<div>
						<a href="/comment/{{comment.identifier }}" class="btn btn-warning btn-xs" role="button"><i class="fa fa-edit" aria-hidden="true"></i></a>
						<a data-id="{{ comment.identifier }}" class="btn btn-danger btn-xs delete-comment" role="button"><i class="fa fa-trash" aria-hidden="true"></i></a>
					</div>
					{% endif %}
					</div>
					<div class="panel-body">
						<p>{{ comment.comment | nl2br }}</p>
					</div>
					{% else %}
					<div class="panel-heading commentHeader">
						<sm><i>Commentaire supprimé.</i></sm>
						{% if comment.author.identifier == getUserParam("identifier") %}
							<a data-id="{{ comment.identifier }}" class="btn btn-link cancel-delete-comment" role="button">Annuler la supression</a>
						{% endif %}
					</div>
					{% endif %}
				</div>
			{% endfor %}
            {{ utils.pagination(nbPage,"#commentList") }}
		{% endif %}
    </section>

{% endblock %}
{% block script %}
<script src="/assets/js/deleteComment.js"></script>
{% endblock %}
