{% extends "/base.twig" %}

{% block title %}Modification de l'adresse mail{% endblock %}

{% block main %}
    <section>
        <div class="container">
            <div class="row">
                <form method="post">
					<div class="col-lg-12">
						<p>Votre adresse mail actuelle:</p>
						<h3>{{ user.email }}</h3>
						<div class="row control-group">
							<div class="form-group col-xs-12 floating-label-form-group controls">
								<label>Nouvelle adresse mail</label>
								<input type="email" class="form-control" placeholder="Nouvelle adresse mail" name="email" required data-validation-required-message="Veuillez entrer votre email.">
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="row control-group">
							<div class="form-group col-xs-12 floating-label-form-group controls">
								<label>Retaper l'adresse</label>
								<input type="email" class="form-control" placeholder="Retaper l'adresse" name="retape" required data-validation-required-message="Veuillez entrer votre email.">
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<br><br>
						<div id="success"></div>
						<div class="row">
							<div class="form-group col-xs-12">
								<button type="submit" class="btn btn-success btn-lg">
									Modifier
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</section>
	{% endblock %}