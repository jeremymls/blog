{% extends "/base.twig" %}

{% block title %}Authentification{% endblock %}
{% block subtitle %}
	<a id="retour" href="javascript:history.back()" ><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
{% endblock %}
		{% block nav %}{% endblock %}
		{% block footer %}{% endblock %}

{% block main %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    {% if isLogged() %}
                        <div class="row">
                            <div class="form-group col-xs-12 text-center">
                                <a href="{{ getPath('logout') }}">Déconnexion</a>
                            </div>
                        </div>
                    {% else %}
                        <form action="" method="post">
                            <div class="row control-group">
                                <div class="form-group col-xs-12 floating-label-form-group controls">
                                    <label>Identifiant</label>
                                    <input type="text" class="form-control" placeholder="Identifiant" id="identifiant" name="identifiant" required data-validation-required-message="Please enter idendifant.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="row control-group">
                                <div class="form-group col-xs-12 floating-label-form-group controls">
                                    <label>Mot de passe</label>
                                    <input type="password" class="form-control" placeholder="Mot de passe" id="password" name="password" required data-validation-required-message="Please enter password.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <small><a href="{{ getPath('forget') }}">Mot de passe oublié?</a></small>
                            <br>
                            <div class="row">
                                <div class="form-group col-xs-12 text-center">
                                    <button type="submit" class="btn btn-success btn-lg">Connexion</button>
                                </div>
                            </div>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
