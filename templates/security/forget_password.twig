							</div>
						</div>
						<div class="row">
							<div class="form-group col-xs-12">
								<button type="submit" class="btn btn-success btn-lg">
									Envoyer le mot de passe
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</section>
	{% endblock %}