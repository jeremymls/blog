{% extends "/base.twig" %}

{% block title %}Bienvenue sur mon blog{% endblock %}
{% block subtitle %}" Je conçois vos besoins "{% endblock %}
{% block imageSrc %}/assets/img/logo.png{% endblock %}

{% block main %}

    <!-- Portfolio Grid Section -->
    <section id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Projet actuel</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row text-center">
                <div class="col-sm-12 portfolio-item">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3>En construction</h3>
                            <p>Cette fonctionalité n'a pas encore été développée</p>
                        </div>
                    </div>
                    {# <a href="" class="portfolio-link" >
                        <div class="caption">
                            <div class="caption-content">
                                <i class="fa fa-search-plus fa-3x"></i>
                            </div>
                        </div>
                        <img src="/assets/img/portfolio/cabin.png" class="img-responsive" alt="">
                    </a> #}
                </div>
                <a class="btn btn-lg btn-primary" href="/posts" role="button">VOIR TOUS LES PROJETS</a>
            </div>
        </div>
        
	{# {% for post in posts %}
		<div class="news">
			<h3>
				{{ post.title }}
				<em>le
					{{ post.frenchCreationDate }}</em>
			</h3>
			<p>
				{{ post.content | nl2br }}
				<br/>
				<em>
					<a href="index.php?action=post&id={{  post.identifier }}">Commentaires</a>
				</em>
			</p>
		</div>
	{% endfor %} #}

    </section>


    <!-- About Section -->
    <section class="success" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Je m'appelle Jérémy Monlouis</h2>
                    <hr class="star-light">
                </div>
            </div>
            <div class="row">

                <div class="col-md-5 col-lg-push-5 col-lg-2  text-center">
                    <img width="100%"  src="/assets/img/photo.png" alt="">
                </div>

                <div id="intro" class="col-md-6 col-lg-pull-2 col-lg-5 text-center">
                    <p>Développeur PHP / Symfony passionné<p/>
					<p>Je partage sur ce blog quelques projets</p>
                    <p>N'hesitez pas à télécharger mon CV</p>
					<div class="row">
                        <a href="/assets/CV.pdf" target="_blank" class="btn btn-sm btn-outline">CV <i class="fa fa-download"></i></a>
					</div>
                </div>

                <div class="col-lg-5 text-center">
                    <h3>Vous pouvez me contacter :</h3>
                    <div id="contactDiv">
					<dl class="dl-horizontal text-left">
                        <div>
                            <dt>Par le</dt>
                            <dd><a href="#contact">formulaire de contact</a></dd>
                        </div>
                        <div>
                            <dt>Par mail</dt>
                            <dd><a href="mailto:contact@jeremy-monlouis.fr">contact@jeremy-monlouis.fr</a></dd>
                        </div>
                        <div>
                            <dt>Par téléphone</dt>
                            <dd><a href="tel:+33767980747">07 67 98 07 47</a></dd>
                        </div>
                        <div>
                            <dt>Sur les</dt>
                            <dd>réseaux sociaux</dd>
                        </div>
					</dl>
                    </div>
					<div class="row text-center">
						<div class="col-auto">
							<a href="https://www.linkedin.com/in/jeremy-mls/" target="_blank" class="btn-social btn-outline"><i class="fa fa-fw fa-linkedin"></i></a>
							<a href="https://github.com/jeremy-mls" target="_blank" class="btn-social btn-outline"><i class="fa fa-fw fa-github"></i></a>
						</div>
					</div>
                </div>

            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Formulaire de contact</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <form action="" method="post">
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Nom</label>
                                <input type="text" class="form-control" placeholder="Nom" name="name" value="{{session.user.username}}" required data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Adresse E-mail</label>
                                <input type="email" class="form-control" placeholder="Adresse E-mail" name="email" required data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Téléphone *</label>
                                <input type="tel" class="form-control" placeholder="Téléphone *" name="phone" >
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Message</label>
                                <textarea rows="3" class="form-control" placeholder="Message" name="message" required data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div>* optionnel</div>
                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div class="form-group col-xs-12 text-center">
                                <button type="submit" class="btn btn-success btn-lg">Envoyer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
